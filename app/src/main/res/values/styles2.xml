<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="NightTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/shallowBlack</item>
        <item name="colorPrimaryDark">@color/shallowBlack</item>
        <item name="colorAccent">@color/shallowBlack</item>
        <item name="android:textSize">16sp</item>
        <item name="android:windowBackground">@color/background_material_dark</item>
        <item name="android:textColorPrimary">#ffffff</item>
        <item name="colorControlNormal">@color/shallowBlack</item>
        <item name="titleStyle">@style/NightTitleStyle</item>
        <item name="contentStyle">@style/NightContentStyle</item>
        <item name="buttonBg">@color/black</item>
        <item name="buttonTextColor">#9E9E9E</item>
        <item name="checkTextColor">#212121</item>
        <item name="switchTextColor">#212121</item>
         <item name="android:textColor">@color/white</item>
    </style>

    <style name="NightTitleStyle">
        <item name="android:background">#5E5C5C</item>
    </style>

    <style name="NightContentStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>

    </style>

    <style name="NightTextStyle">
        <item name="android:textColor">@color/white</item>
    </style>


</resources>